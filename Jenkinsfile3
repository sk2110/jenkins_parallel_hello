#!/usr/bin/env groovy

import hudson.model.*
import hudson.EnvVars
import groovy.json.JsonSlurperClassic
import groovy.json.JsonBuilder
import groovy.json.JsonOutput
import java.net.URL
import groovy.json.JsonSlurper

   
   def mvnHome
   def mvnHome1
   def mvnHome2
   def a=1

     stage 'Preparation'
     parallel (
        "pre 1" : { 
               node {
              git 'https://github.com/jglick/simple-maven-project-with-tests.git'
              mvnHome = tool 'M3'
               }
           },
            "pre 2" :
           {
              node {
              git 'https://github.com/jglick/simple-maven-project-with-tests.git'
              mvnHome1 = tool 'M3'
               }
           }
        )
   
   stage 'Build'
     parallel (
        "build 1" : { 
               node {
              // Run the maven build
              if (isUnix()) {
                 sh "'${mvnHome}/bin/mvn' -Dmaven.test.failure.ignore clean package"
              } else {
                 bat(/"${mvnHome}\bin\mvn" -Dmaven.test.failure.ignore clean package/)
               }
               junit '**/target/surefire-reports/TEST-*.xml'
               archive 'target/*.jar'
              }
           },
           "build 2" :
           {
               node {
              // Run the maven build
              if (isUnix()) {
                 sh "'${mvnHome1}/bin/mvn' -Dmaven.test.failure.ignore clean package"
              } else {
                 bat(/"${mvnHome1}\bin\mvn" -Dmaven.test.failure.ignore clean package/)
               }
               junit '**/target/surefire-reports/TEST-*.xml'
             archive 'target/*.jar'
              }
           }
        )
        stage 'NextDataP'
        node { 
               build job: 'NextData'
              }

        stage "Upload artifact"
        node {
         step(
           [
             $class: 'S3BucketPublisher',
             entries: [
               [
                 $class: 'Entry',
                  bucket: "jenkins-poc",
                  sourceFile: "/mnt/jenkins/jobs/${env.JOB_BASE_NAME}/${env.BUILD_NUMBER}/*.xml",
                 selectedRegion: "us-east-1"
               ]]
              //,  profileName: 'jenkins-poc',
             // dontWaitForConcurrentBuildCompletion: true
           ])}
        

   /*   stage 'echos'
         node {
            echo env.JOB_BASE_NAME
            echo env.BUILD_NUMBER 
            echo env.BUILD_STATUS
           // echo env.s3-profile
            
         }
         */

